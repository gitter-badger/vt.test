<?xml version="1.0" encoding="UTF-8"?>

<project name="Vliegtickets" default="build" basedir="." description="This is a buildfile for Vliegtickest project.">
    <!-- Required properties -->
    <property name="base.dir" value="." override="true"/>
    <property name="vendors.dir" value="../library/Symfony/vendor" />
    
    <target name="phpunit" description="Run unit tests with PHPUnit">
        <exec executable="phpunit" passthru="true" checkreturn="true">
            <arg value="-c" />
            <arg value="app" />
        </exec>
    </target>
    
    <target name="vendors" description="Update vendors">
        <delete dir="${vendors.dir}"/>
                
        <exec
            command="sudo composer update"
            dir="${base.dir}"
            checkreturn="true"
            passthru="true"
            level="verbose"
        />
    </target>
    
    <target name="build" depends="vendors,phpunit">
    </target>
    
</project>